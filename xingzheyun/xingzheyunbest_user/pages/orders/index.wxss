/* pages/orders/index.wxss */

@import "../templates/navigator.wxss";

.mapmain{
	position: absolute;
	width: 100%;
	height: 100%;
}

.swp{
	position: absolute;
	width: 100%;
	height: 100%;
}

.container{
	height: auto;
	padding: 30rpx;
	padding-bottom: 300rpx;
}

.noorder{
	width: 100%;
	height: 390rpx;
	text-align: center;
	color: #999999;
}

.order{
	width: 100%;
	height: 390rpx;
}

.order .titlerow{
	width: 100%;
	height: 92rpx;
	border-bottom: solid 1rpx #eeeeee;

}

.order .titlerow .icon{
	width: 62rpx;
	height: 62rpx;
	border-radius: 31rpx;
	background-color: #f2f5ff;
	text-align: center;
	line-height: 62rpx;
	margin-left: 30rpx;
	float: left;
}

.order .titlerow .icon image{
	width: 39rpx;
}



.order .titlerow .title{
	float: left;
	width: 350rpx;
	height: 62rpx;
	text-align: left;
	font-size: 32rpx;
	color: #333333;
	line-height: 62rpx;
	margin-left: 10rpx;
}


.order .titlerow .status{
	float: right;
	width: 210rpx;
	height: 62rpx;
	text-align: right;
	font-size: 32rpx;
	color: #3d73dd;
	line-height: 62rpx;
	margin-left: 10rpx;
}
.order .titlerow .status.gray{
	color: #999999;
}

.order .detailrow{
	width: 100%;
	height: 102rpx;
	margin-top: 30rpx;
}

.order .detailrow .loc{
	width: 494rpx;
	height: 52rpx;
	float: left;
	background-image: url('data:image/png;base64,');
	background-size: 22rpx 26rpx;
	background-repeat: no-repeat;
	background-position:  20rpx center;
	padding-left: 60rpx;
	text-align: left;
	font-size: 28rpx;
	color: #b8b9c6;
	line-height: 52rpx;
}

.order .detailrow .time{
	width: 494rpx;
	height: 50rpx;
	float: left;
	background-image: url('data:image/png;base64,');
	background-size: 25rpx 25rpx;
	background-repeat: no-repeat;
	background-position: 20rpx center;
	padding-left: 60rpx;
	text-align: left;
	font-size: 28rpx;
	color: #b8b9c6;
	line-height: 50rpx;
}


.order .detailrow .price{
	width: 130;
	height: 82rpx;
	float: right;
	text-align: right;
	font-size: 36rpx;
	color: #3d73dd;
	line-height: 82rpx;
}

.order .detailrow .price .money{
	font-size: 26rpx;
}


.order .btnrow{
	width: 100%;
	height: 64rpx;
	margin-top: 30rpx;
}

.order .btnrow .btndetail{
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background-color: #f2f5ff;
	font-size: 28rpx;
	color: #4678de;
	border-radius: 30rpx;
	float: right;
	margin-right: 30rpx;
}


.order .btnrow .btnprogress{
	width: 180rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background-color: #3d73dd;
	font-size: 28rpx;
	color: #ffffff;
	border-radius: 30rpx;
	float: right;
}