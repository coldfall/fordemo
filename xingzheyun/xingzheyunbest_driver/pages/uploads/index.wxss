/* pages/userinfo/index.wxss */

.rowhead{
	width: 200rpx;
	height: 200rpx;
	border-radius: 100rpx;
	border:solid 1rpx #eeeeee;
	margin: auto;
	margin-top: 18rpx;
	margin-bottom: 80rpx;
	background-color: #faf9ff;
	overflow: hidden;
}

.rownob.bottomrow{
  position: fixed;
  bottom: 90rpx;
  text-align: center;
  left: 0rpx;
}

.rownob.bigtitle{
  height: 80rpx;
}

.rowhead image{
	width: 100%;
}

.rowgender .con{
	display:inline-block;
	width: 397rpx;
	margin: auto;
}

.rowgender button{
	float: left;
	margin-left: 27rpx;
	margin-right: 27rpx;
}

.content .crow.crowtitle{
  clear: both;
  width: 100%;
  text-align: left;
  font-size: 36rpx;
  font-weight: bold;
}

.content .crow.rowcontent{
  height: auto;
  line-height: 45rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  width: 100%;

}

.content .crow.rowcontent .item{
  width: 242rpx;
  height: 50rpx;
  text-align: left;
  line-height: 50rpx;
  color: #666666;
  font-size: 30rpx;
  float: left;
}

.content .crow.rowcontent .item .red{
  color: #dd3d3d;
}

.buttonupload{
  width: 186rpx;
  height: 186rpx;
  float: left;
  margin-right: 63rpx;
  background-image: url('data:image/png;base64,');


}
.rowclear{
  width: 100%;
  clear: both;
  height: 30rpx;
}

.crow.rowpics{
  height:  auto;
  min-height: 300rpx;
  text-align: center;
  width: 100%;
  clear: both;
}

.crow.rowpics .viewimg{
  width: 186rpx;
  height: 186rpx;
  border-radius: 10rpx;
  float: left;
  margin:10rpx;
  overflow: hidden;
  border:solid 2rpx #d7d7d7;
  
}

.crow.rowpics .viewimg image{
  width: 100%;
  height: 100%;
}

.btndel{
  position: absolute;
  width: 45rpx;
  height: 41rpx;
  margin-top: 0rpx;
  margin-left: 142rpx;
  background-image: url('data:image/png;base64,');
}